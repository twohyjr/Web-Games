<div class="well">
     <div class="container">
         <div class="centered text-center">
              <h3><button class="btn btn-primary" {{action "startPacMan"}}>Start Pac Man</button></h3>

              <canvas id="pacCanvas" width={{level.pixelWidth}} height={{level.pixelHeight}}></canvas>

              <br>

              Score: {{score}} &nbsp; &nbsp; &nbsp;
              Level: {{levelNumber}} &nbsp; &nbsp; &nbsp;
              Lives: {{lives}} &nbsp; &nbsp; &nbsp;

              {{#if pac.powerMode}}
                   PowerMode: {{pac.powerModeTime}}
              {{/if}}
         </div>

     </div>
</div>
